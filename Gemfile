# A sample Gemfile
source "https://rubygems.org"

gem 'rake'
gem 'aws-kclrb'
gem 'elasticsearch'
gem 'faraday_middleware-aws-signers-v4'
gem 'sinatra'
gem 'sinatra-contrib'
#CORS regex config
gem "sinatra-cross_origin", github: 'britg/sinatra-cross_origin', branch: 'master'
gem 'puma'
gem 'pusher'
gem 'geocoder'
gem 'maxminddb'

group :development do
  gem 'rerun'
  gem 'pry'
  gem 'pry-byebug'
  gem 'pry-stack_explorer'
  gem 'pry-rescue'
  gem 'awesome_print'
  gem 'foreman'
end

group :development, :test do
  gem 'rspec'
end
